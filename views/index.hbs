<!doctype html>
<html>
    <head>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
        <script src="https://code.jquery.com/jquery-latest.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
        <script src="/chat.js"></script>
		<script>
		$(document).ready(function(){
			var height = $(window).height();
			var width  = $(window).width();
			console.log(width);
			var i = 0;
			var j = 0;
			for(i=0;i<20;i++){
				for(j=0;j<12;j++){
					if (i!= 14 && j!=19)	
					$('#table').append('<button id='+i+'-'+j+'></button>');
				}
			}
			var btnWidth = Math.floor(width/15);
			$('#table button').html('&nbsp;');
			$('#send_username').on('click',function(){
				$('#status').show();
			});
		});
		</script>
		<style>
			#table{
				width: 100%;
                margin: auto;
                margin-top:5px;
			}
			#table button{
				width: 7.9vw;
				height: 7.9vw;
				border: none;
				border: .5px solid #34633a85;
				margin-left: 0.3vw;
				margin-top: 2px;
				background-color: #e1dfdc3b;
    			border-radius: 4%;
			} 
			#status{
				display:none;
			}
            .header{
                padding-top: 20px;
                height: 100px;
                width: 100%;
                background-image: url('../image/background.jpg');
            }
            #chatroom{
                color:white;
                margin-left: 30px;
            }
			#table button span{
				font-size:16px;
				font-weight: bold;
			}
		</style>
    </head>
    <body style="padding: 0px;margin: 0px;">
        <div class="header">
            <span style="color:white;margin-left: 35px;font-size:20px;">Username:</span>
            <input type="text" id="username" style="padding:4px;">
            <input type="button" id="send_username" name="Submit" value="submit" style="padding: 3px 16px;font-size: 15px;">
            <input type="button" id="status" value="I'm ready !" style="font-size:15px;">
            <input type="button" id="go" style="display:none" style="padding: 3px 16px;font-size: 15px;">
            <div id="chatroom"></div>
        </div>
		<div id="table">
		</div>
		<div id="ex1" class="modal">
			<p id="result"></p>
			<p>Thank you for playing</p>
			<a href="#" rel="modal:close" id="closeModel">Close and reload</a>
		</div>
    </body>
</html>